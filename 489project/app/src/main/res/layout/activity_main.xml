<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#afeeee"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/Image"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/image"
            android:layout_marginRight="15dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="DeliveryJet"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="#eeeeee"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="52dp">
            <TextView
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:text="Already has an account?"
                android:textStyle="bold"
                android:textColor="#008000"/>

            <TextView
                android:id="@+id/btnSignIn"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:text="Sign In"
                android:background="#728FCE"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

            <TextView
                android:id="@+id/labelName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Full Name:"
                android:textStyle="bold"
                android:textColor="#000000" />
            <EditText
                android:id="@+id/eName"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Email address:"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/eEmail"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:textColor="#000000"
                android:inputType="textEmailAddress"
                />
            <TextView
                android:id="@+id/labelPass1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Password:"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/ePass1"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="42dp"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/labelPass2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Re-Type Password:"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/ePass2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:textColor="#000000"
                android:inputType="textPassword"
                />
        <TextView
            android:id="@+id/labelPhone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="contact No:"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/ePhone"
            android:layout_width="match_parent"
            android:inputType="phone"
            android:layout_height="42dp"
            android:textColor="#000000"
            />


            <TextView
                android:id="@+id/labelType"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Sign Up As:"
                android:textStyle="bold"
                android:textColor="#000000"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbCompany"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Company"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    />
                <RadioButton
                    android:id="@+id/rbDeliveryman"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Delivery Man"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    />

            </RadioGroup>
        </LinearLayout>







    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#728FCE"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>